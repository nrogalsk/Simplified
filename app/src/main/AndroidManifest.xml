<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.niki.simplified">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailActivity"
            android:label="@string/about_email_activity" />
        <activity
            android:name=".ClockActivity"
            android:label="@string/about_clock_activity" />
        <activity
            android:name=".WeatherActivity"
            android:label="@string/about_weather_activity" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about_about_activity" />

        <receiver android:name=".AlarmReceiver" >
        </receiver>
    </application>

</manifest>